<h1>Current Bookings</h1>

<table>
  <tr>
    <th align=left valign=top>Name</th>
    <th align=left valign=top>Contact number</th>
    <th align=left valign=top>Suburb origin</th>
     <th align=left valign=top>Suburb destination</th>
    <th align=left valign=top>No of Passengers</th>
    <th align=left valign=top>Taxi type</th>
    <th align=left valign=top>Date required</th>
    <th align=left valign=top>Time required</th>
  </tr>

<% for passenger in @passengers %>
  <tr>
    <td nowrap><%=h passenger.name %></td>
    <td nowrap><%=h passenger.contact_number %></td>
    <td nowrap><%=h passenger.suburb_origin %></td>
    <td nowrap><%=h passenger.suburb_destination %></td>
    <td align=center nowrap><%=h passenger.passenger_number %></td>
    <td nowrap><%=h passenger.taxi_type %></td>
    <td nowrap><%=h passenger.date.strftime('%d %B %Y') %></td>
    <td nowrap><%=h passenger.time_required.strftime('%H:%M')%></td>
    <td nowrap><%= link_to 'View', passenger %></td>
    <td nowrap><%= link_to 'Edit', edit_passenger_path(passenger) %></td>
    <td nowrap><%= link_to 'Delete', passenger, :confirm => 'Are you sure you want to delete ' + passenger.name + '?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

